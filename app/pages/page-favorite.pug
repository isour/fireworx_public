extends /blocks/layout-default/layout-default.pug

include /blocks/icon/icon.pug
include /blocks/fieldset/fieldset.pug
include /blocks/cart-total/cart-total.pug
include /blocks/cart-list/cart-list.pug
include /blocks/breadcrumbs/breadcrumbs.pug
include /blocks/cart-delivery/cart-delivery.pug
include /blocks/cart-contacts/cart-contacts.pug
include /blocks/cart-payment/cart-payment.pug
include /blocks/product/product.pug


block head
	- var pageTitle = 'Корзина';

block content
	+section('promoline')._line
	+section._breadcrumbs
		+e.container.container
			+breadcrumbs([{'title': 'Каталог', 'link': true, 'mobile': true}, {'title': 'Корзина', 'link': false}])
	+section._orders
		+e.container.container
			+e.header
				+e.title
					+heading({'tag': 'h2'})._h2 Личный кабинет
				+e('a').exit(href = '#')
					| Выйти
					+icon('exit').icon_exit
			+e.content
				+layout._profile
					+e.aside
						+menu(getData('menu/profile'))._profile
					+e.content
						.grid.grid_five
							each item, index in [1]
								each item, index in getData('products/sale')
									.grid__item
										+product(item)._grid
											+e.media
												+image({'file': 'temp/product-1.jpg', 'alt': `${item.title}`}).product__img
												+e('button').favorite_active(type = 'button')
													+e.heart
														+icon('heart').icon_heart
														+icon('heartfill').icon_heartfill
												+e.popup
													+button({"type": "button"}).product__popup-link.js-popup(data-url = 'popup-product.html') Быстрый просмотр
											+e.content
												+e.top
													+e.category Батареи салютов
													+e.sku Артикул: СП7960
												+e('h6').title
													+e('a').title-link(href = "#") Танец орла (1”, 150 залпов)
												+e.price_old 12 425 ₽/шт
												+e.price 11 425 ₽/шт
											+e.footer
												+tocart
