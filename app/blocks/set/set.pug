mixin set(data)
	+b.set&attributes(attributes)
		block
		+e.content
			+e.pretitle #{data.pretitle}
			+e.title #{data.title}
			+e.contents
				+list(data.contents)._set
			+e.price
				+e('span').price-val #{data.price}
				+e('span').price-label â‚½
			if (!data.hideCart)
				+e.footer
					+tocart('set')._set
		if data.img
			+e.media
				+image({'file': data.img, 'alt': data.title}).set__img
