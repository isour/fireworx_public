mixin video(data)
	+b.video&attributes(attributes)
		block
		if data
			+e('a').link(href = 'https://youtu.be/' + data.src)
				+e('picture').picture
					+e('source').source(data-srcset = 'https://i.ytimg.com/vi_webp/' + data.src +'/maxresdefault.webp' type='image/webp')
					+e('img').media(data-src = 'https://i.ytimg.com/vi/' + data.src + '/maxresdefault.jpg' alt = data-title)
			+e('button').button(type = "button" aria-label = "Запустить видео")
				+icon('play').icon_play
