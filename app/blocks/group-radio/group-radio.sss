.group-radio
  display: block
  margin-top: -10px
  &__item
    display: block
    text-decoration: none
    margin-top: 10px
    color: #666C72
  @mixin tablet
    &_big
      lost-center: 100%
      margin-bottom: -30px
    &_big &__item
      lost-column: 1/3 3 20px
      margin-top: 0
      margin-bottom: 30px
      display: flex
      flex-direction: column
    &_double &__item
      lost-column: 1/2 2 20px
