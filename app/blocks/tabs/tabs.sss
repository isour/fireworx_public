.tabs
  display: block
  &__header
    display: flex
    overflow-x: auto
    position: relative
    margin: 0 calc(var(--padding_mobile) * -1)
    margin-bottom: 20px
    &::after
      content: ''
      display: block
      flex: 0 0 var(--padding_mobile)
  &__button
    background: none
    padding: 0
    margin: 0
    border: none
    font-size: 14px
    line-height: 1.375
    color: var(--color_gray)
    margin-left: var(--padding_mobile)
    display: flex
    align-items: center
    justify-content: center
    text-align: left
    position: relative
    transition: color .4s
    cursor: pointer
    flex: 0 0 auto
    padding: 13px 0
    padding-bottom: 20px
    margin-right: 25px
    margin-bottom: 8px
    position: relative
  &__button_active,
  &__button:hover
    color: #ECECEC
    &::after
      display: block
      background-color: #ff5a4c
      background-image: -webkit-linear-gradient(left, #ff5a4c, #ff1660)
      background-image: linear-gradient(to right, #ff5a4c, #ff1660)
      content: ''
      margin: auto
      margin-bottom: auto
      width: 100%
      height: 3px
      box-shadow: 0 0 6px #ff6047
      border-radius: 2px
      position: absolute
      left: 0
      right: 0
      bottom: 3px
  &__tab
    display: none
    margin: 0 calc(-1 * var(--padding_mobile))
  &__tab_active
    display: block
  &_reviews &__header
    align-items: flex-stretch
    margin-bottom: 32px
  &_reviews &__button
    font-weight: 500
    display: flex
    flex-direction: column
